<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity"
    android:background="@color/backgoundfragmend"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    >


    <com.spark.submitbutton.SubmitButton
        android:id="@+id/btnRegistration"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Registration"
        android:textColor="@color/gray"
        android:layout_gravity="center"
        android:gravity="center"
        app:sub_btn_background="@color/white"
        app:sub_btn_duration="1000"
        app:sub_btn_line_color="@android:color/holo_green_dark"
        app:sub_btn_ripple_color="@android:color/darker_gray"
        app:sub_btn_tick_color="@color/white"
        android:visibility="gone"
        />



    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="50dp"
        android:text="Login"
        android:background="@color/white"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:id="@+id/btnLoginWithEmail"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="50dp"
        android:text="Email Login"
        android:background="@color/white"
        />

</LinearLayout>